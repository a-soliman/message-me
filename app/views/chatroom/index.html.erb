<h4 class="ui center aligned medium icon header">
  <i class="circular blue comment alternate icon"></i>
  Say something
</h4>

<div class="ui two column grid">
  <!-- feed -->
  <div class="twelve wide column">
    <div class="ui fluid card chatbox">
      <div class="content" id="messages">
        <div class="ui feed" id="message-container">
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
         <%= form_for(@message, url: message_path, class: "ui reply form", remote: true) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body, placeholder: "Hey!", id: "message-input" %>
              <%= f.button '<i class="bordered inverted blue edit icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a href="" class="item">Home</a>
          <a href="" class="item">Messages</a>
          <a href="" class="item">Friends</a>
        </div>
      </div>
    </div>
  </div>
</div>
