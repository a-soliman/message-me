<%= render "shared/welcome_message" %>

<h4 class="ui center aligned medium icon header">
  <i class="circular blue power off icon"></i>
  Signup to continue
</h4>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= render "shared/errors", resource: @user %>
      <%= form_with(model: @user, url: signup_path, class: "ui form", local: true) do |f| %>
        <div class="field">
          <label>Username</label>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <label>Password</label>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Entrer your password" %>
            <i class="lock icon"></i>
          </div>
        </div>
        <div class="">
          <%= f.submit "Signup", class: "ui blue submit button" %>
        </div>
    <% end %>
      </div>
    <div class="middle aligned column">
      <div class="ui big button">
        <%= link_to '<i class="signup icon"></i> Login'.html_safe , login_path %>
      </div>
    </div>
  </div>
  <div class="ui vertical divider">Or</div>
</div>
