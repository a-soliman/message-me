<div class="ui small inverted menu">
  <%= link_to "Chatroon", root_path, class: "item" %>
  <a class="item">
    Messages
  </a>
  <div class="right menu">
    <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
      <div class="menu">
        <% if logged_in?%>
          <%= link_to "Logout", logout_path, data: { turbo_method: :delete }, class: "item" %>
        <% else %>
          <%= link_to "Login", login_path, class: "item" %>
          <a class="item">Signup</a>
        <% end %>
      </div>
    </div>
    <div class="item">
      <% if logged_in?%>
        <%= link_to "Logout", logout_path, data: { turbo_method: :delete }, class: "ui red button" %>
      <% else %>
        <div class="ui primary button">Sign Up</div>
      <% end %>
    </div>
  </div>
</div>